<Prefab>
  <Window>
    <Widget WidthSizePolicy = "StretchToParent" HeightSizePolicy = "StretchToParent">
      <Children>
        <ListPanel LayoutImp.LayoutMethod="VerticalBottomToTop" WidthSizePolicy="CoverChildren" HeightSizePolicy="CoverChildren" HorizontalAlignment="Left" VerticalAlignment="Bottom" MarginBottom="0" MarginLeft="12">
          <Children>
            <!-- Army Arrow Counter -->
            <Widget WidthSizePolicy="CoverChildren" HeightSizePolicy="CoverChildren" HorizontalAlignment="Left" VerticalAlignment="Bottom" PositionYOffset="-40">
              <Children>
                <TextWidget WidthSizePolicy = "CoverChildren" HeightSizePolicy = "CoverChildren" HorizontalAlignment="Left" VerticalAlignment="Bottom" Text="Army Arrow Count:" Brush="ArmyArrowCounter.Header"/>
                <TextWidget SuggestedWidth = "90" HorizontalAlignment="Left" VerticalAlignment="Bottom" PositionYOffset="20" Brush="ArmyArrowCounter.Count" Text="@ArrowCounterText"/>
              </Children>
            </Widget>
          </Children>
        </ListPanel>
      </Children>
    </Widget>
  </Window>
</Prefab>